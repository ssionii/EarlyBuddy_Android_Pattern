<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/img_signupbackground">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입 후\n얼리버디와 함께해요!"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:layout_marginTop="56dp"
            android:layout_marginLeft="41dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="35dp"
            android:paddingHorizontal="32dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="14dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아이디"
                    android:layout_weight="1"
                    android:textColor="@color/gray"
                    android:fontFamily="@font/noto_sans_kr_medium"/>
                <TextView
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="중복된 아이디입니다."
                    android:textColor="#ff6e6e"
                    android:fontFamily="@font/noto_sans_kr_medium"/>
            </LinearLayout>


            <EditText
                android:id="@+id/act_signup_et_id"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_signup_box_default"
                android:paddingLeft="19dp"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:fontFamily="@font/noto_sans_kr_medium"
                android:textColor="@color/black"
                android:hint="아이디를 입력해주세요."
                android:textColorHint="@color/light_gray"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:paddingHorizontal="32dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="14dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비밀번호"
                    android:layout_weight="1"
                    android:textColor="@color/gray"
                    android:fontFamily="@font/noto_sans_kr_medium"/>
                <TextView
                    android:id="@+id/act_signup_tv_pw_wrong"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6자 이상 입력해주세요."
                    android:textColor="#ff6e6e"
                    android:fontFamily="@font/noto_sans_kr_medium"/>
            </LinearLayout>

            <EditText
                android:id="@+id/act_signup_et_pw"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_signup_box_default"
                android:paddingLeft="19dp"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:fontFamily="@font/noto_sans_kr_medium"
                android:textColor="@color/black"
                android:hint="영어+숫자 6자 이상 입력해주세요."
                android:textColorHint="@color/light_gray"
                android:inputType="textPassword"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:paddingHorizontal="32dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="14dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비밀번호 확인"
                    android:layout_weight="1"
                    android:textColor="@color/gray"
                    android:fontFamily="@font/noto_sans_kr_medium"/>
                <TextView
                    android:id="@+id/act_signup_tv_pw_check_wrong"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비밀번호가 다릅니다."
                    android:textColor="#ff6e6e"
                    android:fontFamily="@font/noto_sans_kr_medium"/>
            </LinearLayout>

            <EditText
                android:id="@+id/act_signup_et_pw_check"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_signup_box_default"
                android:paddingLeft="19dp"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:fontFamily="@font/noto_sans_kr_medium"
                android:textColor="@color/black"
                android:hint="비밀번호를 한 번 더 입력해주세요."
                android:textColorHint="@color/light_gray"
                android:inputType="textPassword"/>
        </LinearLayout>

       <androidx.cardview.widget.CardView
           android:id="@+id/act_signup_cv_done"
           android:layout_width="match_parent"
           android:layout_height="45dp"
           android:layout_marginHorizontal="32dp"
           android:layout_marginTop="63dp"
           app:cardBackgroundColor="@color/light_gray"
           app:cardCornerRadius="25dp"
           app:cardElevation="0dp">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="15sp"
               android:text="가입하기"
               android:textColor="@color/white"
               android:layout_gravity="center"
               />
       </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>